<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="title_bar_title" format="string" />
        <attr name="title_bar_back_src" format="reference|color" />
        <attr name="title_bar_right_type" format="enum">
            <enum name="none" value="0" />
            <enum name="text" value="1" />
            <enum name="image" value="2" />
        </attr>
        <attr name="title_bar_right_src" format="reference|color" />
        <attr name="title_bar_right_text" format="string" />
        <attr name="title_bar_title_gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="title_bar_shadow_type" format="enum">
            <enum name="none" value="0" />
            <enum name="line" value="1" />
            <enum name="gradient" value="2" />
        </attr>
        <attr name="title_bar_shadow" format="reference|color" />
        <attr name="title_bar_shadow_height" format="dimension" />
        <attr name="title_bar_right_textView_style" format="reference" />
        <attr name="title_bar_right_imageview_style" format="reference" />
        <attr name="title_bar_back_view_style" format="reference" />
        <attr name="title_bar_title_style" format="reference" />
        <attr name="android:minHeight" format="dimension"  />
        <attr name="android:layout_height" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TitleBar_Layout">
        <attr name="android:layout_width" format="dimension"  />
        <attr name="android:layout_height" format="dimension" />
        <attr name="android:layout_gravity"/>
        <attr name="android:layout_margin" format="dimension"  />
        <attr name="android:layout_marginLeft" format="dimension"  />
        <attr name="android:layout_marginTop" format="dimension" />
        <attr name="android:layout_marginRight" format="dimension"  />
        <attr name="android:layout_marginBottom" format="dimension"  />
        <attr name="android:layout_marginStart" format="dimension"  />
        <attr name="android:layout_marginEnd" format="dimension"  />
        <attr name="android:layout_marginHorizontal" format="dimension"  />
        <attr name="android:layout_marginVertical" format="dimension"  />

        <attr name="android:src" format="reference|color" />
        <attr name="android:textSize" format="reference|color" />
        <attr name="android:textColor" format="reference|color" />
    </declare-styleable>

</resources>