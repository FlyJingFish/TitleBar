<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_title_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_title_bar_status_bar"
        android:layout_alignBottom="@+id/fl_title_bar_container"/>
    <ImageView
        android:id="@+id/iv_title_bar_status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_title_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/title_bar_minHeight"
        android:layout_below="@+id/iv_title_bar_status_bar">
        <FrameLayout
            android:id="@+id/left_container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <com.flyjingfish.titlebarlib.ClickImageView
                android:id="@+id/iv_title_bar_back"
                android:layout_width="@dimen/title_bar_backView_width"
                android:layout_height="@dimen/title_bar_backView_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/title_bar_backView_marginStart"
                android:layout_marginEnd="@dimen/title_bar_backView_marginEnd"
                android:src="@drawable/ic_title_bar_back"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/left_container"
            app:layout_constraintEnd_toStartOf="@id/right_container"
            app:layout_constraintHorizontal_bias="0"
            android:visibility="visible"
            android:textColor="@color/title_bar_title_textColor"
            android:textSize="@dimen/title_bar_title_textSize"
            tools:text="sss"/>
        <FrameLayout
            android:id="@+id/right_container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_custom_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/left_container"
            app:layout_constraintEnd_toStartOf="@+id/right_container">
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.flyjingfish.titlebarlib.ShadowLine
        android:id="@+id/shadow_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_title_bar_container"/>
</merge>